<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata httpGetEnabled="true"/>
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service behaviorConfiguration="mexBehavior" name="TrucoServer.TrucoServer">
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080/TrucoServiceBase"/>
						<add baseAddress="net.tcp://localhost:8091/TrucoServiceBase"/>
					</baseAddresses>
				</host>

				<endpoint address="user"
                          binding="netTcpBinding"
                          bindingConfiguration=""
                          contract="TrucoServer.ITrucoUserService"/>

				<endpoint address="match"
                          binding="netTcpBinding"
                          bindingConfiguration=""
                          contract="TrucoServer.ITrucoMatchService"/>

				<endpoint address="friend"
                          binding="netTcpBinding"
                          bindingConfiguration=""
                          contract="TrucoServer.ITrucoFriendService"/>

				<endpoint address="mex"
                          binding="mexHttpBinding"
                          contract="IMetadataExchange" />
			</service>
		</services>
	</system.serviceModel>
</configuration>